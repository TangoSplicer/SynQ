### ğŸ§  Type Checking ###
@fn explain_type(x): -> void
    let t = typeof(x)
    match t:
        "int" => print("This is an integer.")
        "string" => print("This is a string.")
        "bool" => print("This is a boolean.")
        _ => print("Unknown type.")

explain_type(language)
explain_type(year)
explain_type(true)

