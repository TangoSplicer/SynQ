// --- Variational Quantum Energy Minimization (VQE) ---

// Define energy expectation function
fn energy(params) {
    theta = params["theta"]

    allocate(q0)
    RX(q0, theta)
    return expect(Z, q0)
}

// Initial parameter guess
init_params = {
    "theta": 0.5
}

// Run variational optimizer using echoWave
result = optimize(
    energy,
    init_params,
    strategy = "echo",
    max_iters = 40
)

print("Optimized theta:")
print(result)