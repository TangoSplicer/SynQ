// Macro: plugin_query.synq
// Purpose: Search for plugins matching a tag or keyword

macro search_plugins(query) {
  let results = @system.plugin_registry().search(query)
  return results.map(p => ({
    name: p.name,
    description: p.description,
    usage: p.usage_count,
    tags: p.tags
  }))
}