// --- SynQ Conversational Memory Module ---

class Memory:
    def __init__():
        set self.history = []

    def add(line):
        push self.history line

    def clear():
        set self.history = []

    def ask(query):
        set all = join(self.history, "\n") + "\nUser: " + query
        set reply = run ActiveAI(all)
        push self.history "User: " + query
        push self.history "Bot: " + reply
        return reply

# Factory function
def new Memory():
    return Memory()